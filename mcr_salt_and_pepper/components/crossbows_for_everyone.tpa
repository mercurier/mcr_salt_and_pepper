//// Standardize to hit and damage bonus from enchantment on launchers and ammo
COPY_EXISTING - ~SLNG01.itm~ nowhere
	READ_LONG 0x1e sling_usability
BUT_ONLY

COPY_EXISTING_REGEXP GLOB ~.*\.itm$~ ~override~
	READ_SHORT 0x1c item_type
	PATCH_IF item_type = 0x1b BEGIN  
		WRITE_LONG 0x1e sling_usability
	END
BUT_ONLY
